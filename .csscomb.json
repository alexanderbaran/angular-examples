{
    "remove-empty-rulesets": true,
    "always-semicolon": true,
    "color-case": "lower",
    "block-indent": "    ",
    "color-shorthand": false,
    "element-case": "lower",
    "eof-newline": true,
    "leading-zero": true,
    "quotes": "double",
    "space-before-colon": "",
    "space-after-colon": " ",
    "space-before-combinator": " ",
    "space-after-combinator": " ",
    "space-between-declarations": "\n",
    "space-before-opening-brace": " ",
    "space-after-opening-brace": "\n",
    "space-before-selector-delimiter": "",
    "space-before-closing-brace": "\n",
    "strip-spaces": true,
    "tab-size": true,
    "vendor-prefix-align": true,


    "exclude": ["node_modules/**"],

    "sort-order": [
        [
            "$variable",
            "$include",
            "$extend",

            "box-sizing",

            "text-indent",

            "display",
            "justify-content",
            "align-items",
            
            "overflow",
            
            "position",
            "top",
            "left",
            "right",
            "bottom",
            "vertical-align",

            "float",
            "clear",
            "width",
            "height",
            "min-height",
            "content",

            "margin",
            "margin-top",
            "margin-right",
            "margin-bottom",
            "margin-left",

            "padding",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left",

            "background",
            "background-color",
            "background-image",

            "border",
            "border-top",
            "border-right",
            "border-bottom",
            "border-left",
            "border-color",
            "border-radius",
            "border-style",
            "border-width",
            "border-top-width",
            "border-right-width",
            "border-bottom-width",
            "border-left-width",
            "border-top-color",
            "border-right-color",
            "border-bottom-color",
            "border-left-color",
            "border-top-left-radius",
            "border-top-right-radius",
            "border-bottom-left-radius",
            "border-bottom-right-radius",

            "color",

            "font",
            "font-family",
            "font-size",
            "font-weight",
            "font-style",
            "line-height",
            "letter-spacing", 
            "text-align",
            "text-decoration",
            "text-overflow",
            "text-rendering",
            "white-space",
            
            "box-shadow",
            "text-shadow",

            "cursor",
            "pointer-events",

            "user-select",
            "outline",
            "appearance",

            "animation",
            "transition",
            "transform",

            "src",

            "-webkit-font-smoothing",
            "-moz-osx-font-smoothing"

            
        ],
        ["..."]
    ]

}